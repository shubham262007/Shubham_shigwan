#include <stdio.h>

int main() {
    float basic, hra, da, gross;

    printf("Enter the basic salary: ");
    scanf("%f", &basic);

    hra = 0.20 * basic;
    da = 0.40 * basic;
    
    gross = basic + hra + da;


    printf("House Rent Allowance (20%%): %.2f\n", hra);
    printf("Dearness Allowance (40%%): %.2f\n", da);
    printf("Gross Salary: %.2f\n", gross);

    return 0;
}
